#include <iostream>
using namespace std;
int main()
{
    int t,T;
    cin >> T;
    for(t=0;t<T;t++) {
        int n, i, count=0; cin >> n;
        int a[n];
        for(i=0;i<n;i++) {
            cin >> a[i];
        }
        for(i=1;i<n-1;i++){
            if (a[i] > a[i-1] && a[i] > a[i+1]) 
                count ++;
        }
        cout << count << endl;
    }
	return 0;
}
